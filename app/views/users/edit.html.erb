<h1>Edit User</h1>
<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :handle %>
    <%= f.text_field :handle %>
  </div>
  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>
