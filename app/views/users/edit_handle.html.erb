<div class="container mt-5">
  <h2 class="text-center section-title">Change Your Handle</h2>

  <div class="card shadow-lg p-4 mx-auto w-50">
    <%= form_with(model: @user, url: edit_handle_users_path, local: true) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :handle, "Enter a new handle", class: "form-label" %>
        <%= f.text_field :handle, class: "form-control shadow-sm", value: @user.handle %>
      </div>
      <div class="text-center">
        <%= f.submit "Update Handle", class: "btn btn-success grow-button mt-3 w-50" %>
      </div>
    <% end %>
  </div>
</div>
