<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h2>Sign Up</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :handle, "Handle", class: "form-label" %>
              <%= f.text_field :handle, autocomplete: "handle", class: "form-control", placeholder: "Choose a username" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(minimum <%= @minimum_password_length %> characters)</small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter a secure password" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Re-enter your password" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
