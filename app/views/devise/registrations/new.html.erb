<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow" style="box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); transition: box-shadow 0.3s;">
        <div class="card-header text-center" style="background-color: #59b396; color: white;">
          <h2 class="fw-bold">Create Your Account</h2>
        </div>
        <div class="card-body bg-light">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-3">
              <%= f.label :email, "Email", class: "form-label fw-semibold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3", placeholder: "Enter your email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :handle, "Username", class: "form-label fw-semibold" %>
              <%= f.text_field :handle, autocomplete: "handle", class: "form-control rounded-3", placeholder: "Choose a username" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label fw-semibold" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(minimum <%= @minimum_password_length %> characters)</small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-3", placeholder: "Enter a secure password" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "Confirm Password", class: "form-label fw-semibold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3", placeholder: "Re-enter your password" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Sign Up", class: "btn btn-success btn-block rounded-pill grow-button", style: "background-color: #59b396; color: white;" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none hover-link", style: "color: #3f51b5;" %>
        </div>
      </div>
    </div>
  </div>
</div>
