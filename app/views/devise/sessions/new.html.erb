<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow" style="box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); transition: box-shadow 0.3s;">
        <div class="card-header text-center" style="background-color: #59b396; color: white;">
          <h2 class="fw-bold">Log In</h2>
        </div>
        <div class="card-body bg-light">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-3">
              <%= f.label :email, "Email", class: "form-label fw-semibold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3", placeholder: "Enter your email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label fw-semibold" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-3", placeholder: "Enter your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-4">
                <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                <%= f.label :remember_me, "Remember Me", class: "form-check-label fw-semibold", for: "remember_me" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "Log In", class: "btn btn-success btn-block rounded-pill grow-button", style: "background-color: #59b396; color: white;" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none hover-link", style: "color: #3f51b5;" %><br>
          <%= link_to "Sign Up", new_registration_path(resource_name), class: "text-decoration-none hover-link", style: "color: #3f51b5;" %>
        </div>
      </div>
    </div>
  </div>
</div>
