<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-success text-white">
          <h2>Log In</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-4">
                <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                <%= f.label :remember_me, "Remember Me", class: "form-check-label", for: "remember_me" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "Log In", class: "btn btn-success btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
