<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-info text-white">
          <h2>Forgot Your Password?</h2>
        </div>
        <div class="card-body">
          <p class="text-muted text-center">Enter your email below, and we'll send you instructions to reset your password.</p>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-4">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email address" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Send Reset Instructions", class: "btn btn-info btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
